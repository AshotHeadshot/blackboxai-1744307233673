<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.GameArena" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Text appearance -->
        <item name="android:textViewStyle">@style/Widget.GameArena.TextView</item>
        <item name="buttonStyle">@style/Widget.GameArena.Button</item>
    </style>

    <!-- Common Text Styles -->
    <style name="Widget.GameArena.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/game_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Button Style -->
    <style name="Widget.GameArena.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.GameArena.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Game Title Style -->
    <style name="TextAppearance.GameArena.GameTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/game_text</item>
    </style>

    <!-- Score Text Style -->
    <style name="TextAppearance.GameArena.Score" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <!-- Leaderboard Rank Styles -->
    <style name="TextAppearance.GameArena.LeaderboardRank" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Dialog Style -->
    <style name="ThemeOverlay.GameArena.MaterialDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.GameArena.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.GameArena.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.GameArena.Button.TextButton</item>
    </style>

    <style name="MaterialAlertDialog.GameArena.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text Button Style -->
    <style name="Widget.GameArena.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
